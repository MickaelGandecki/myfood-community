@model myfoodapp.Hub.Models.EventViewModel

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<div style="margin:20px">

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.createdBy)
    @Html.HiddenFor(model => model.productionUnitId)
    @Html.HiddenFor(model => model.eventTypeId)
    @*@Html.HiddenFor(model => model.date)*@


    <div style="margin:10px">
        @Html.LabelFor(model => model.date)
        <br />
        @Html.Kendo().DatePickerFor(model => model.date)
    </div>

    <div style="margin:10px">
        @Html.LabelFor(model => model.description)
        <br />
        @Html.EditorFor(model => model.description)
    </div>

    <div style="margin:10px">
        @Html.LabelFor(model => model.isOpen)
        <br/>
        <input type="checkbox" name="isOpen" checked='@Model.isOpen' data-toggle="toggle">
    </div>

    <div style="margin:10px;" >
        @Html.LabelFor(model => model.details)
        <br />
        @Html.TextAreaFor(model => model.details)
    </div>

</div>

<style>
    .toggle.btn{
         width: 40px !important;
         height: 20px !important;
         min-width: 40px;
         min-height: 20px;

    }

    .toggle-on{
         background-color:green;
    }

   .k-textbox {
          width: 100%;
    }

    textarea {
          width: 100%;
          height: 300px; 
    }

    .k-grid-update span.k-icon {
        display: none;
    }

    .k-edit-form-container {
        width: 100%;
    }

    .k-grid-cancel span.k-icon {
        display: none;
    }
</style>